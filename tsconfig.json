{
    "compilerOptions": {
        "target": "ES2022",
        "module": "nodenext",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": "./src",
        "paths": {
            "@controllers": ["controllers"],
            "@controllers/*":["controllers/*"],
            "@config": ["config"],
            "@config/*": ["config/*"],
            "@middlewares": ["middlewares"],
            "@middlewares/*": ["middlewares/*"],
            "@models": ["models"],
            "@models/*": ["models/*"],
            "@repositories": ["repositories"],
            "@repositories/*": ["repositories/*"],
            "@routes": ["routes"],
            "@v1routes": ["routes/v1"],
            "@v1routes/*": ["routes/v1/*"],
            "@services": ["services"],
            "@services/*": ["services/*"],
            "@types": ["types"],
            "@helpers": ["utils/helpers"],
            "@helpers/*": ["utils/helpers/*"],
            "@errors": ["utils/errors"],
            "@errors/*": ["utils/errors/*"],
            "@common": ["utils/common"],
            "@common/*": ["utils/common/*"],
            "@jokes": ["utils/jokes"],
            "@jokes/*": ["utils/jokes/*"],
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
